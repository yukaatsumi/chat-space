.messages__message
  .messages__message__upper
    .messages__message__upper__user-name
      = message.user.name
    .messages__message__upper__date
      = message.created_at.strftime('%Y/%m/%d %H:%M:%S')
  .messages__message__bottom
    %p.messages__message__bottom__content
      - if message.content.present?
        = message.content
      %br
      - if message.image.present?
        = image_tag message.image.url, class: 'lower-message__image'
